div.nu__accordion {
  // margin-top:$gutter;
  float:left;
  max-width:20%;
  width:100%;
  & > ul {
    list-style: none;
    perspective: 900;
    padding: 0;
    margin: 0;
    & > li {
      position: relative;
      padding: 0;
      margin: 0;
      @extend .flipIn;
      & > h2 {
        @include font-1b-l;
        text-transform: uppercase;
        display: block;
        margin: 0;
        cursor: pointer;
        @extend .no-select;
        &:hover {
          color:$brand_colors-grayW !important;
        }
        &:first-child {
          padding-bottom:19px;
        }
      }
      & > i {
       position: absolute;
       transform: translate( -6px , 0 );
       margin-top: 9px;
       right: 0;
         &:before , &:after{
           content: "";
           @extend .transition;
           position: absolute;
           background-color: $brand_colors-black;
           width: 3px;
           height: 9px;
         }
         &:before{
          transform: translate( -2px , 0 ) rotate( 45deg );
         }
         &:after{
          transform: translate( 2px , 0 ) rotate( -45deg );
         }
      }
      & > input[type=checkbox]{
        position: absolute;
        cursor: pointer;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 0;
        &:checked{
          &~ul{
            margin-top: 0;
            max-height: 0;
            opacity: 0;
            transform: translate( 0 , 50% );

          }

          &~i{
            &:before{
              transform: translate( 2px , 0 ) rotate( 45deg );
              // font-family: 'Material Icons';
              // content: '\e313'
            }
            &:after{
              // font-family: 'Material Icons';
              // content: '\e316'
              transform: translate( -2px , 0 ) rotate( -45deg );
            }
          }


        }
      }
      @keyframes flipdown{
        0% {
          opacity: 0;
          transform-origin: top center;
          transform: rotateX(-90deg);
        }
        5% {
          opacity: 1;
        }
        80% {
          transform: rotateX(8deg);
        }
        83% {
          transform: rotateX(6deg);
        }
        92% {
          transform: rotateX(-3deg);
        }
        100% {
          transform-origin: top center;
          transform: rotateX(0deg) ;
        }
      }
      & > ul {
        padding-left:($gutter / 2);
        margin:($gutter / 2) 0;
        & > li {
          position: relative;
          overflow: hidden;
          max-height: 800px;
          @extend .transition;
          opacity: 1;
          transform: translate( 0 , 0 );
          margin-top: ($gutter / 2);
          z-index: 2;
          & > a {
            @include font-0-l;
            &:hover {
              color:$brand_colors-grayW;
            }
          }
        }
        & > .current_page_item {
          & > a {
            //color:$brand_colors-red;
            font-weight:700;
            &:hover {
              color:$brand_colors-black;
            }
          }
        }
      }
    }
  }

  &.transition {
    transition: all 0.25s ease-in-out;
  }

  .flipIn {
    animation: flipdown 0.5s ease both;
  }

  .no-select {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

}
